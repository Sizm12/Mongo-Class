# ==================================
# MongoDB Docker Environment Template
# ==================================
# Copy this file to .env and update the values

# MongoDB Configuration
# ====================
# Root user credentials
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=your_secure_password_here
MONGO_INITDB_DATABASE=myapp_db

# MongoDB Express (Web UI)
# =======================
# Web interface credentials
ME_CONFIG_BASICAUTH_USERNAME=admin
ME_CONFIG_BASICAUTH_PASSWORD=your_secure_password_here

# MongoDB Exporter (for Prometheus)
# ===============================
MONGODB_EXPORTER_ENABLED=true

# Resource Limits
# ==============
# Adjust based on your system resources
MONGODB_MEMORY_LIMIT=2G
MONGODB_MEMORY_RESERVATION=1G
MONGODB_CPU_LIMIT=2

# Optional: Application Database User
# ================================
# Uncomment and modify if your app needs a dedicated database user
# APP_DB_USER=app_user
# APP_DB_PASSWORD=your_app_password
# APP_DB_NAME=app_database

# Network Configuration
# ===================
# Uncomment and modify if you need to change default ports
# MONGO_PORT=27017
# MONGODB_EXPRESS_PORT=8081
# MONGODB_EXPORTER_PORT=9216

# Note: Always keep this file out of version control
# and never commit actual credentials to your repository.
